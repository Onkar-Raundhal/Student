<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".Delete">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/Lottie_Delete"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toTopOf="@id/txtl511"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            app:layout_constraintTop_toBottomOf="@id/Heading3" />

<!--    <ImageView-->
<!--        android:id="@+id/img1"-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="300dp"-->
<!--        android:src="@drawable/deleteavtar"-->
<!--        app:layout_constraintBottom_toTopOf="@id/txtl511"-->
<!--        app:layout_constraintEnd_toEndOf="@id/guideline2"-->
<!--        app:layout_constraintStart_toStartOf="@id/guideline1"-->
<!--        app:layout_constraintTop_toBottomOf="@id/Heading3" />-->


    <TextView
        android:id="@+id/Heading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:text=" DELETE STUDENT"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:drawableStart="@drawable/delete_inner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/Lottie_Delete"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtl511"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:hint="Enter Roll No of Student You Want to Delete"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:paddingBottom="20sp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/Lottie_Delete"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintBottom_toTopOf="@id/del_btn_close">

        <EditText
            android:id="@+id/delete_roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="0123456789"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        />

    <Button
        android:id="@+id/del_btn_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:layout_marginBottom="5sp"
        android:textSize="25sp"
        android:textColor="#645CBB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/del_btn"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        />

    <Button
        android:id="@+id/del_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginBottom="5sp"
        android:textSize="25sp"
        android:textColor="#645CBB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/del_btn_close"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
